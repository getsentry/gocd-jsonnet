{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double", { "avoidEscape": true }],
    "no-var": "error",
    "no-eval": "error",
    "default-case": "error"
  },
  "overrides": []
}
